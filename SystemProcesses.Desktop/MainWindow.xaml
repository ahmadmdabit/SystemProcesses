<Window
    x:Class="SystemProcesses.Desktop.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:SystemProcesses.Desktop.ViewModels"
    Title="System Processes"
    Width="1400"
    Height="700"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <Window.DataContext>
        <viewmodels:MainViewModel />
    </Window.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  Toolbar  -->
        <ToolBar Grid.Row="0" Padding="5">
            <!--  New Feature: Graceful End  -->
            <Button
                Command="{Binding GracefulEndProcessCommand}"
                Content="Graceful End"
                Style="{StaticResource ToolbarButtonStyle}"
                ToolTip="Requests the process to close (like clicking X)" />
            <Button
                Command="{Binding GracefulEndProcessTreeCommand}"
                Content="Graceful End Tree"
                Style="{StaticResource ToolbarButtonStyle}"
                ToolTip="Requests the process tree to close (like clicking X)" />
            <Button
                Command="{Binding EndProcessCommand}"
                Content="End"
                Style="{StaticResource ToolbarButtonStyle}"
                ToolTip="Forcefully stops the process" />
            <Button
                Command="{Binding EndProcessTreeCommand}"
                Content="End Tree"
                Style="{StaticResource ToolbarButtonStyle}"
                ToolTip="Forcefully stops the process tree" />
            <Separator />
            <Button
                Command="{Binding ShowProcessDetailsCommand}"
                Content="Details"
                Style="{StaticResource ToolbarButtonStyle}" />
            <Button
                Command="{Binding OpenProcessDirectoryCommand}"
                Content="Open Directory"
                Style="{StaticResource ToolbarButtonStyle}" />
            <Separator />
            <ToggleButton
                Content="Isolate Tree"
                IsChecked="{Binding IsTreeIsolated}"
                Style="{StaticResource ToggleButtonStyle}" />
        </ToolBar>

        <!--  Filter Bar  -->
        <Grid Grid.Row="1" Margin="10,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="300" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="50" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="60" />
            </Grid.ColumnDefinitions>

            <TextBlock
                Grid.Column="0"
                Margin="0,0,5,0"
                VerticalAlignment="Center"
                Text="Search:" />
            <TextBox
                Grid.Column="1"
                VerticalAlignment="Center"
                Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" />

            <TextBlock
                Grid.Column="3"
                Margin="10,0,5,0"
                VerticalAlignment="Center"
                Text="Refresh:" />
            <ComboBox
                Grid.Column="4"
                VerticalAlignment="Center"
                ItemsSource="{Binding RefreshIntervals}"
                SelectedItem="{Binding SelectedRefreshInterval}" />

            <Button
                Grid.Column="6"
                Margin="5,0,0,0"
                Command="{Binding TogglePauseCommand}"
                Content="{Binding PauseResumeText}" />
        </Grid>

        <!--  Process Tree  -->
        <TreeView
            Grid.Row="2"
            Margin="10,0,10,10"
            BorderBrush="LightGray"
            BorderThickness="1"
            ItemsSource="{Binding Processes}"
            SelectedItemChanged="TreeView_SelectedItemChanged"
            VirtualizingStackPanel.IsVirtualizing="True"
            VirtualizingStackPanel.VirtualizationMode="Recycling">

            <TreeView.ItemContainerStyle>
                <Style BasedOn="{StaticResource TreeViewItemStyle}" TargetType="TreeViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                </Style>
            </TreeView.ItemContainerStyle>

            <TreeView.Resources>
                <HierarchicalDataTemplate DataType="{x:Type viewmodels:ProcessItemViewModel}" ItemsSource="{Binding Children}">
                    <Grid HorizontalAlignment="Stretch">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="80" />
                            <ColumnDefinition Width="250" />
                            <ColumnDefinition Width="100" />
                            <ColumnDefinition Width="120" />
                            <ColumnDefinition Width="120" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <!--  PID  -->
                        <TextBlock
                            Grid.Column="0"
                            Margin="5,2"
                            VerticalAlignment="Center"
                            Text="{Binding Pid}" />

                        <!--  Name with Icon  -->
                        <StackPanel
                            Grid.Column="1"
                            Margin="5,2"
                            VerticalAlignment="Center"
                            Orientation="Horizontal">
                            <Image
                                Width="16"
                                Height="16"
                                Margin="0,0,5,0"
                                RenderOptions.BitmapScalingMode="HighQuality"
                                Source="{Binding Icon}" />
                            <TextBlock
                                VerticalAlignment="Center"
                                Foreground="{Binding IsService, Converter={StaticResource ServiceColorConverter}}"
                                Text="{Binding Name}" />
                        </StackPanel>

                        <!--  CPU  -->
                        <TextBlock
                            Grid.Column="2"
                            Margin="5,2"
                            VerticalAlignment="Center"
                            Text="{Binding CpuPercentage, Converter={StaticResource CpuPercentageConverter}}"
                            TextAlignment="Right" />

                        <!--  Memory  -->
                        <TextBlock
                            Grid.Column="3"
                            Margin="5,2"
                            VerticalAlignment="Center"
                            Text="{Binding MemoryBytes, Converter={StaticResource BytesToAutoFormatConverter}}"
                            TextAlignment="Right" />

                        <!--  VM Size  -->
                        <TextBlock
                            Grid.Column="4"
                            Margin="5,2"
                            VerticalAlignment="Center"
                            Text="{Binding VirtualMemoryBytes, Converter={StaticResource BytesToAutoFormatConverter}}"
                            TextAlignment="Right" />

                        <!--  Parameters  -->
                        <TextBlock
                            Grid.Column="5"
                            Margin="5,2"
                            VerticalAlignment="Center"
                            Text="{Binding Parameters}"
                            TextTrimming="CharacterEllipsis" />
                    </Grid>
                </HierarchicalDataTemplate>
            </TreeView.Resources>
        </TreeView>

        <!--  Status Bar  -->
        <StatusBar Grid.Row="3">
            <StatusBarItem>
                <TextBlock Text="{Binding Processes.Count, StringFormat='Total Root Processes: {0}'}" />
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>