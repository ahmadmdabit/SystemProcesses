<Window
    x:Class="SystemProcesses.Desktop.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:tb="clr-namespace:H.NotifyIcon;assembly=H.NotifyIcon.Wpf"
    xmlns:viewmodels="clr-namespace:SystemProcesses.Desktop.ViewModels"
    x:Name="uiRoot"
    Title="System Processes"
    Width="960"
    Height="500"
    Closing="uiRootClosing"
    Icon="/Resources/Images/TrayIcon/SystemProcess-Tray.ico"
    StateChanged="uiRootStateChanged"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <Window.DataContext>
        <viewmodels:MainViewModel />
    </Window.DataContext>

    <Window.Resources />

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  Note: IconSource points to the .ico file in Resources  -->
        <tb:TaskbarIcon
            x:Name="uiTrayTaskbarIcon"
            DoubleClickCommand="{Binding ShowApplicationCommand}"
            IconSource="{Binding CpuTrayIconImageSource}"
            MenuActivation="RightClick"
            ToolTipText="System Processes">

            <tb:TaskbarIcon.ContextMenu>
                <ContextMenu>
                    <MenuItem Command="{Binding ShowApplicationCommand}" Header="Show" />
                    <Separator />
                    <MenuItem Command="{Binding ExitApplicationCommand}" Header="Exit" />
                </ContextMenu>
            </tb:TaskbarIcon.ContextMenu>

            <tb:TaskbarIcon.TrayPopup>
                <Border
                    Width="280"
                    Margin="0,0,0,47"
                    Padding="10"
                    Background="Black"
                    BorderBrush="#00EE00"
                    BorderThickness="2"
                    CornerRadius="10">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Border
                            Grid.Row="0"
                            Margin="0,0,0,10"
                            Padding="10"
                            Background="Black"
                            BorderBrush="#00EE00"
                            BorderThickness="1"
                            CornerRadius="10">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <TextBlock
                                    Grid.Row="0"
                                    Margin="0,0,0,5"
                                    FontWeight="Bold"
                                    Foreground="#00EE00"
                                    Text="{Binding TrayToolTipTextHeader}"
                                    TextWrapping="Wrap" />

                                <TextBlock
                                    Grid.Row="1"
                                    Margin="0,0,0,5"
                                    FontWeight="Bold"
                                    Foreground="#00EE00"
                                    Text="{Binding StorageStatsTrayText}"
                                    TextWrapping="Wrap" />
                            </Grid>
                        </Border>

                        <Border
                            Grid.Row="1"
                            Margin="0,0,0,0"
                            Padding="10"
                            Background="Black"
                            BorderBrush="#00EE00"
                            BorderThickness="1"
                            CornerRadius="10">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <TextBlock
                                    Grid.Row="0"
                                    Margin="0,0,0,5"
                                    FontWeight="Bold"
                                    Foreground="#00EE00"
                                    Text="Top 5 Processes:"
                                    TextWrapping="Wrap" />

                                <TextBlock
                                    Grid.Row="1"
                                    Margin="0,0,0,0"
                                    Foreground="#00EE00"
                                    Text="{Binding TrayToolTipTextBody}"
                                    TextWrapping="Wrap" />
                            </Grid>
                        </Border>

                    </Grid>
                </Border>
            </tb:TaskbarIcon.TrayPopup>
        </tb:TaskbarIcon>

        <!--  Toolbar  -->
        <ToolBar
            Grid.Row="0"
            Padding="5"
            Visibility="Collapsed">
            <!--  New Feature: Graceful End  -->
            <Button
                Command="{Binding GracefulEndProcessCommand}"
                Content="Graceful End"
                Style="{StaticResource ToolbarButtonStyle}"
                ToolTip="Requests the process to close (like clicking X)" />
            <Button
                Command="{Binding GracefulEndProcessTreeCommand}"
                Content="Graceful End Tree"
                Style="{StaticResource ToolbarButtonStyle}"
                ToolTip="Requests the process tree to close (like clicking X)" />
            <Button
                Command="{Binding EndProcessCommand}"
                Content="End"
                Style="{StaticResource ToolbarButtonStyle}"
                ToolTip="Forcefully stops the process" />
            <Button
                Command="{Binding EndProcessTreeCommand}"
                Content="End Tree"
                Style="{StaticResource ToolbarButtonStyle}"
                ToolTip="Forcefully stops the process tree" />
            <Separator />
            <Button
                Command="{Binding ShowProcessDetailsCommand}"
                Content="Details"
                Style="{StaticResource ToolbarButtonStyle}" />
            <Button
                Command="{Binding OpenProcessDirectoryCommand}"
                Content="Open Directory"
                Style="{StaticResource ToolbarButtonStyle}" />
            <Separator />
            <ToggleButton
                Content="Isolate Tree"
                IsChecked="{Binding IsTreeIsolated}"
                Style="{StaticResource ToggleButtonStyle}" />
        </ToolBar>

        <!--  Filter Bar  -->
        <Grid Grid.Row="1" Margin="10,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="130" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <StackPanel
                Grid.Column="0"
                Margin="10,0,10,0"
                VerticalAlignment="Center"
                Orientation="Horizontal">

                <StackPanel.ToolTip>
                    <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                        <StackPanel Margin="0,0,10,0" Orientation="Horizontal">
                            <TextBlock FontWeight="Bold" Text="Processes: " />
                            <TextBlock Text="{Binding TotalProcessCount}" />
                        </StackPanel>

                        <StackPanel Margin="0,0,10,0" Orientation="Horizontal">
                            <TextBlock FontWeight="Bold" Text="Threads: " />
                            <TextBlock Text="{Binding TotalThreadCount}" />
                        </StackPanel>

                        <StackPanel Margin="0,0,10,0" Orientation="Horizontal">
                            <TextBlock FontWeight="Bold" Text="Handles: " />
                            <TextBlock Text="{Binding TotalHandleCount}" />
                        </StackPanel>
                    </StackPanel>
                </StackPanel.ToolTip>

                <StackPanel Margin="0,0,10,0" Orientation="Horizontal">
                    <TextBlock FontWeight="Bold" Text="CPU: " />
                    <TextBlock Text="{Binding TotalCpuUsage, Converter={StaticResource CpuPercentageConverter}}" TextAlignment="Right" />
                </StackPanel>

                <StackPanel Margin="0,0,10,0" Orientation="Horizontal">
                    <TextBlock
                        FontWeight="Bold"
                        Text="RAM: "
                        ToolTip="Available Physical Memory" />
                    <TextBlock Text="{Binding AvailablePhysicalMemory, Converter={StaticResource BytesToAutoFormatConverter}}" />
                    <TextBlock Text="{Binding RamFreePercentage, StringFormat=' ({0:F0}%)'}" />
                </StackPanel>

                <StackPanel Margin="0,0,10,0" Orientation="Horizontal">
                    <TextBlock
                        FontWeight="Bold"
                        Text="VM: "
                        ToolTip="Available Virtual Memory (Commit Limit)" />
                    <TextBlock Text="{Binding AvailableCommitLimit, Converter={StaticResource BytesToAutoFormatConverter}}" />
                    <TextBlock Text="{Binding VmFreePercentage, StringFormat=' ({0:F0}%)'}" />
                </StackPanel>

                <StackPanel Margin="0,0,10,0" Orientation="Horizontal">
                    <TextBlock FontWeight="Bold" Text="Disk: " />
                    <TextBlock Text="{Binding DiskActivePercent, StringFormat='{}{0:F0}%'}" TextAlignment="Right" />
                </StackPanel>

                <StackPanel Margin="0,0,10,0" Orientation="Horizontal">
                    <TextBlock FontWeight="Bold" Text="Storage: " />
                    <TextBlock Text="{Binding StorageStatsText}" TextAlignment="Right" />
                </StackPanel>
            </StackPanel>

            <TextBox
                Grid.Column="2"
                Margin="0,0,5,0"
                Padding="2"
                VerticalAlignment="Center"
                Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                ToolTip="Filter the process by Process name or Id" />
            <ComboBox
                Grid.Column="3"
                Padding="2"
                VerticalAlignment="Center"
                ItemsSource="{Binding RefreshIntervals}"
                SelectedItem="{Binding SelectedRefreshInterval}"
                ToolTip="Refresh Rate" />
        </Grid>

        <!--  Process Tree  -->
        <TreeView
            x:Name="uiProcessTreeView"
            Grid.Row="2"
            Margin="10,0,10,5"
            BorderBrush="Transparent"
            BorderThickness="1"
            Grid.IsSharedSizeScope="True"
            ItemsSource="{Binding Processes}"
            SelectedItemChanged="TreeViewSelectedItemChanged"
            SizeChanged="uiProcessTreeViewSizeChanged"
            VirtualizingStackPanel.IsVirtualizing="True"
            VirtualizingStackPanel.VirtualizationMode="Recycling">

            <TreeView.ItemContainerStyle>
                <Style BasedOn="{StaticResource TreeViewItemStyle}" TargetType="TreeViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                    <Setter Property="HorizontalAlignment" Value="Stretch" />

                    <!--  Bridge DataContext to Tag for ContextMenu access  -->
                    <Setter Property="Tag" Value="{Binding DataContext, RelativeSource={RelativeSource AncestorType=Window}}" />

                    <Setter Property="ContextMenu">
                        <Setter.Value>
                            <ContextMenu>
                                <MenuItem Command="{Binding PlacementTarget.Tag.GracefulEndProcessCommand, RelativeSource={RelativeSource AncestorType=ContextMenu}}" Header="Graceful End" />
                                <MenuItem Command="{Binding PlacementTarget.Tag.GracefulEndProcessTreeCommand, RelativeSource={RelativeSource AncestorType=ContextMenu}}" Header="Graceful End Tree" />
                                <MenuItem Command="{Binding PlacementTarget.Tag.EndProcessCommand, RelativeSource={RelativeSource AncestorType=ContextMenu}}" Header="End" />
                                <MenuItem
                                    Margin="0,0,0,5"
                                    Command="{Binding PlacementTarget.Tag.EndProcessTreeCommand, RelativeSource={RelativeSource AncestorType=ContextMenu}}"
                                    Header="End Tree" />
                                <MenuItem
                                    Margin="0,0,0,5"
                                    Header="Isolate Tree"
                                    IsCheckable="True"
                                    IsChecked="{Binding PlacementTarget.Tag.IsTreeIsolated, RelativeSource={RelativeSource AncestorType=ContextMenu}, Mode=TwoWay}" />
                                <MenuItem Command="{Binding PlacementTarget.Tag.ShowProcessDetailsCommand, RelativeSource={RelativeSource AncestorType=ContextMenu}}" Header="Details" />
                                <MenuItem Command="{Binding PlacementTarget.Tag.CopyProcessPathCommand, RelativeSource={RelativeSource AncestorType=ContextMenu}}" Header="Copy Path" />
                                <MenuItem Command="{Binding PlacementTarget.Tag.OpenProcessDirectoryCommand, RelativeSource={RelativeSource AncestorType=ContextMenu}}" Header="Open Directory" />
                            </ContextMenu>
                        </Setter.Value>
                    </Setter>

                    <!--  Auto-select item on Right-Click  -->
                    <EventSetter Event="PreviewMouseRightButtonDown" Handler="TreeViewItemPreviewMouseRightButtonDown" />
                </Style>
            </TreeView.ItemContainerStyle>

            <TreeView.Resources>
                <HierarchicalDataTemplate DataType="{x:Type viewmodels:ProcessItemViewModel}" ItemsSource="{Binding Children}">
                    <Border
                        MinWidth="900"
                        HorizontalAlignment="Stretch"
                        Background="Transparent">
                        <Border.Width>
                            <MultiBinding Converter="{StaticResource IndentationWidthConverter}" ConverterParameter="21">
                                <!--  Bind to the Window's calculated Row Width  -->
                                <Binding ElementName="uiRoot" Path="TreeViewRowWidth" />
                                <!--  Bind to the Item's Depth  -->
                                <Binding Path="Depth" />
                            </MultiBinding>
                        </Border.Width>

                        <Grid HorizontalAlignment="Stretch">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="80" SharedSizeGroup="PidColumn" />
                                <ColumnDefinition Width="260" SharedSizeGroup="NameColumn" />
                                <ColumnDefinition Width="80" SharedSizeGroup="CpuColumn" />
                                <ColumnDefinition Width="80" SharedSizeGroup="MemColumn" />
                                <ColumnDefinition Width="80" SharedSizeGroup="VmColumn" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <!--  PID  -->
                            <TextBlock
                                Grid.Column="0"
                                Margin="5,2"
                                VerticalAlignment="Center"
                                Text="{Binding PidText}" />

                            <!--  Name with Icon  -->
                            <StackPanel
                                Grid.Column="1"
                                Margin="5,2"
                                VerticalAlignment="Center"
                                Orientation="Horizontal">
                                <Image
                                    Width="16"
                                    Height="16"
                                    Margin="0,0,5,0"
                                    RenderOptions.BitmapScalingMode="HighQuality"
                                    Source="{Binding Icon}" />
                                <TextBlock
                                    VerticalAlignment="Center"
                                    Foreground="{Binding IsService, Converter={StaticResource ServiceColorConverter}}"
                                    Text="{Binding Name}" />
                            </StackPanel>

                            <!--  CPU  -->
                            <TextBlock
                                Grid.Column="2"
                                Margin="5,2"
                                VerticalAlignment="Center"
                                Text="{Binding CpuPercentage, Converter={StaticResource CpuPercentageConverter}}"
                                TextAlignment="Right" />

                            <!--  Memory  -->
                            <TextBlock
                                Grid.Column="3"
                                Margin="5,2"
                                VerticalAlignment="Center"
                                Text="{Binding MemoryBytes, Converter={StaticResource BytesToAutoFormatConverter}}"
                                TextAlignment="Right" />

                            <!--  VM Size  -->
                            <TextBlock
                                Grid.Column="4"
                                Margin="5,2"
                                VerticalAlignment="Center"
                                Text="{Binding VirtualMemoryBytes, Converter={StaticResource BytesToAutoFormatConverter}}"
                                TextAlignment="Right" />

                            <!--  Parameters  -->
                            <TextBlock
                                Grid.Column="5"
                                Margin="5,2"
                                VerticalAlignment="Center"
                                Text="{Binding Parameters}"
                                TextTrimming="CharacterEllipsis" />
                        </Grid>
                    </Border>
                </HierarchicalDataTemplate>
            </TreeView.Resources>
        </TreeView>
    </Grid>
</Window>